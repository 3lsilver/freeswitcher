screen -t logs bash -c 'umask 002;while true;do cd <%= $home %>/log; <%= OPTIONS[:shell] %>;sleep 1;done'
screen -t debug bash -c 'umask 002;while true;do RAILS_ENV=<%= OPTIONS[:environment] %> <%= OPTIONS[:debugger] %>;sleep 1;done'
screen -t ide bash -c 'umask 002;while true;do vim -c "cd <%= $home %>" -c "e .";sleep 1;done'
screen -t lib bash -c 'umask 002;while true;do vim -c "cd lib" -c "e .";sleep 1;done'
screen -t lib/fs bash -c 'umask 002;while true;do vim -c "cd lib/fsr" -c "e .";sleep 1;done'
screen -t cmd bash -c 'umask 002;while true;do vim -c "cd lib/fsr/cmd" -c "e .";sleep 1;done'
screen -t app bash -c 'umask 002;while true;do vim -c "cd lib/fsr/app" -c "e .";sleep 1;done'
screen -t fs_cli bash -c 'umask 002;while true; do sudo fs_cli;sleep 1;done'
screen -t shell bash -c 'umask 002;while true;do <%= OPTIONS[:shell] %>;sleep 2;done'
screen -t tests bash -c 'umask 002;while true;do cd <%= OPTIONS[:test_base] %>;<%= OPTIONS[:shell] %>;sleep 1;done'
select 1
