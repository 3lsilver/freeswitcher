%form{:action => "/join", :method => "post"}
  %table
    %tr
      %td
        %label{:for => "conference"} Conference Name
      %td
        %input#conference{:type => "text", :value => h(@conference), :name => "conference", :size => 10, :maxlength => 10}
    %tr
      %td
        %label{:for => "phone_number"} Phone Number
      %td
        %input#phone_number{:type => "text", :name => "phone_number", :size => 10, :maxlength => 10}
    %tr
      %td
        %label{:for => "caller_id"} Caller ID
      %td
        %input#caller_id{:type => "text", :value => "0008675309", :name => "caller_id", :size => 10, :maxlength => 10}
    %tr
      %td{:colspan => 2}
        %input{:type => "submit", :value => "Join This Conf!"}
