%html
  %head
    %title= @title
    = css :style
  %body
    #container
			
      #headergroup
        #header
          %h1 ConfMe: All Talk
          
        #menu
          %ul
            %li 
              %a{:href => R(MainController, :about),  :title => "All About ConfMe"} About
            %li 
              %a{:href => R(MainController, :start),  :title => "Start A Conference"} New Conf
            %li 
              %a{:href => R(MainController, :join),  :title => "Join A Conference"} Join Conf
            - if logged_in?
              %li
                %a{:href => R(AuthController, :logout), :title => "Logout"} Logout
            - else
              %li
                %a{:href => R(AuthController, :login), :title => "Login"} Login
              %li
                %a{:href => R(AuthController, :new), :title => "Sign up"} Sign up
      #content
        = flashbox
        = @content
